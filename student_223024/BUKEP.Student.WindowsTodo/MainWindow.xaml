<Window x:Class="BUKEP.Student.WindowsTodo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BUKEP.Student.WindowsTodo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView x:Name="TaskViewList" Margin="0,40,0,0" Grid.Row="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Задача"/>
                    <GridViewColumn Header="Описание"/>
                    <GridViewColumn Header="Кнопка типо" Width="Auto"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Добавить задачу" HorizontalAlignment="Left" Margin="15,10,0,0" VerticalAlignment="Top" Width="100"/>
    </Grid>
</Window>
